@page "/configdashboard"
@layout ConfigDashboardMainLayout
@inherits ConfigDashboardPage

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-10">
    <MudGrid>
        <MudItem xs="12" sm="12" md="12" lg="12">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 100%; width: 100%">
                SEJA BEM VINDO AO SISTEMA DE GESTÃO DE ATENDIMENTOS MULTI
            </MudPaper>
        </MudItem>
        <MudItem xs="4" sm="4" md="4" lg="4">
            <MudPaper Elevation="2" Class="mx-auto pa-6 mud-theme-info" Style="width: 100%">
                TOTAL DE ATENDIMENTOS NÃO AVALIADOS
                <MudDivider class="mt-5 mb-5" />
                <MudText Class="d-flex justify-center" style="font-size: 45pt">20</MudText>
                <MudLink Class="d-flex justify-end flex-grow-1"><MudIcon Icon="@Icons.Material.Filled.AddCircle" Title="Saiba Mais" Style="@($"color:white;")" /></MudLink>
            </MudPaper>
        </MudItem>
        <MudItem xs="4" sm="4" md="4" lg="4">
            <MudPaper Elevation="2" Class="mx-auto pa-6 mud-theme-success" Style="width: 100%">
                TOTAL DE ATENDIMENTOS EM ESPERA
                <MudDivider class="mt-5 mb-5" />
                <MudText Class="d-flex justify-center" style="font-size: 45pt">10</MudText>
                <MudLink Class="d-flex justify-end flex-grow-1"><MudIcon Icon="@Icons.Material.Filled.AddCircle" Title="Saiba Mais" Style="@($"color:white;")" /></MudLink>
            </MudPaper>
        </MudItem>
        <MudItem xs="4" sm="4" md="4" lg="4">
            <MudPaper Elevation="2" Class="mx-auto pa-6 mud-theme-warning" Style="width: 100%">
                TOTAL DE ATENDIMENTOS FECHADOS
                <MudDivider class="mt-5 mb-5" />
                <MudText Class="d-flex justify-center" style="font-size: 45pt">1000</MudText>
                <MudLink Class="d-flex justify-end flex-grow-1"><MudIcon Icon="@Icons.Material.Filled.AddCircle" Title="Saiba Mais" Style="@($"color:white;")" /></MudLink>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

